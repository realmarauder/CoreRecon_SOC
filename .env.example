# Application Configuration
APP_NAME=CoreRecon SOC
APP_VERSION=1.0.0
ENV=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Configuration
DATABASE_URL=postgresql+asyncpg://soc_user:changeme@localhost:5432/soc_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PREFIX=corerecon-soc

# Security & Authentication
SECRET_KEY=changeme-generate-a-secure-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Elastic SIEM Integration
ELASTIC_SIEM_URL=https://elastic.example.com:9200
ELASTIC_SIEM_API_KEY=changeme
ELASTIC_SIEM_WEBHOOK_SECRET=changeme

